<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <package name="org.urbcomp.start.db.metadata.entity"/>
    </typeAliases>
    <!-- connection environment -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property value="20" name="poolMaximumActiveConnections"/>
                <property value="true" name="poolPingEnabled"/>
                <property value="select 1 from dual" name="poolPingQuery"/>
                <property value="28799000" name="poolPingConnectionsNotUsedFor"/>
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url"
                          value="jdbc:mysql://ArchiLab-development03:3306/meta_data?useSSL=false&amp;useUnicode=true&amp;characterEncoding=utf-8&amp;serverTimezone=GMT%2B8"/>
                <property name="username" value="root"/>
                <property name="password" value="ArchiLab"/>
            </dataSource>
        </environment>
    </environments>
    <!-- mapper xml -->
    <mappers>
        <mapper resource="metadata/mapper/UserMapper.xml"/>
    </mappers>
</configuration>